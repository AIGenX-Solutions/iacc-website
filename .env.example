# Example Environment Variables for ISCC Website
# Copy this file to `.env.local` and replace placeholder values with actual values.

# Enable bundle analyzer during build
ANALYZE=false

# Public API URL for client-side requests
NEXT_PUBLIC_API_URL=https://api.example.com

# Database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/iscc_database

# Secret key for JWT or other encryption
SECRET_KEY=your-secret-key

# Node environment (development, production, test)
NODE_ENV=development

# Port for local development server
PORT=3000

# Email service credentials (example: SendGrid)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@example.com

# Google Analytics ID
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Stripe API keys for payment processing
STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX

# AWS S3 bucket configuration for file uploads
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1
